@model GamesWorkshop.Domain.View.ProductModels.ProductDetailsViewModel;

<form method="post" id="modalFormId">
    <div asp-asp-validation-summary="@Model">
        <input type="hidden" asp-for="@Model.Id" />
        <div style="float:left;">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">Name</span>
                </div>
                <input type="text" class="form-control" asp-for="@Model.Name" aria-describedby="basic-addon3">
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">Price</span>
                </div>
                <input min="1" max="200" class="form-control" type="number" asp-for="@Model.Price" aria-describedby="basic-addon3">
                <span class="text-danger" asp-validation-for="@Model.Price"></span>
            </div>

            @*Images*@
             <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">Preview ImageUrl</span>
                </div>
                <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.ImageSrc"></textarea>
                <span class="text-danger" asp-validation-for="@Model.ImageSrc"></span>
            </div>
                        <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">ImageUrl1</span>
                </div>
                  <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.Image1"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Image1"></span>
            </div>
                        <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">ImageUrl2</span>
                </div>
                  <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.Image2"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Image2"></span>
            </div>
        </div>

        <div style=" float:right;">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">Amount</span>
                </div>
                <input min="1" max="300" class="form-control" asp-for="@Model.Amount" aria-describedby="basic-addon3">
                <span class="text-danger" asp-validation-for="@Model.Amount"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">Category</span><br />
                </div>
                <select style="width:200px" asp-for="@Model.Category" class="form-control">
                    <option>Select</option>
                    <option value="0">Space Marines</option>
                    <option value="1">Armies Of The Imperium</option>
                    <option value="2">Armies Of Chaos</option>
                    <option value="3">Xenos Armies</option>
                    <option value="4">Terrain</option>
                    <option value="5">Ways to play</option>
                </select>
                <span class="text-danger" asp-validation-for="@Model.Category"></span>
            </div>

            @*Images*@
               <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">ImageUrl3</span>
                </div>
                 <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.Image3"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Image3"></span>
            </div>
                        <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">ImageUrl4</span>
                </div>
                  <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.Image4"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Image4"></span>
            </div>
                        <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="modalInputId" style="font-weight:bold">ImageUrl5</span>
                </div>
                 <textarea style="height:34px; width:250px;resize:none;" class="form-control" asp-for="@Model.Image5"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Image5"></span>
            </div>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3" style="font-weight:bold">Description</span>
            </div>
            <textarea style="height:150px; width:400px; resize:none;" class="form-control" asp-for="@Model.Description"></textarea>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3" style="font-weight:bold">Features</span>
            </div>
            <textarea style="height:150px; width:400px;resize:none;" class="form-control" asp-for="@Model.Features"></textarea>
        </div>
    </div>
</form>


