@model List<GamesWorkshop.Domain.View.ProductModels.ProductViewModel>;

@{
	ViewData["Title"] = "Products";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
	<div class="products-page">
		<div class="products">
				<div class="product-listy">
					<h2>Our Products</h2>
					<ul class="product-list">
						<li><a asp-controller="Product" asp-action="GetProducts">Get avaliable products</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="0">Space Marines</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="1">Armies Of The Imperium</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="2">Armies of Chaos</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="3">Xenos Armies</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="4">Terrain</a></li>
						<li><a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-category="5">Ways to play</a></li>
					</ul>
				</div>
			<div class="tags">
				<h4 class="tag_head">Tags Widget</h4>
				<ul class="tags_links">
					<li><a href="#">Warhammer 40k</a></li>
					<li><a href="#">Figures</a></li>
					<li><a href="#">Guides</a></li>
					<li><a href="#">Paints</a></li>
				</ul>

			</div>

		</div>
		<div class="new-product">
			<div class="new-product-top">
				<ul class="product-top-list">
					<li><a asp-controller="Product" asp-action="Index">Home</a>&nbsp;<span>&gt;</span></li>
					<li><span class="act">Best Sales</span>&nbsp;</li>
				</ul>
				<p class="back"><a href="index.html">Back to Previous</a></p>
				<div class="clearfix"></div>
			</div>
			<div class="mens-toolbar">
				<div class="sort">
					<div class="sort-by">
						<label>Sort By</label>
						<select>
							<option value="">
								Position
							</option>
							<option value="">
								Name
							</option>
							<option value="">
								Price
							</option>
						</select>
						<a href=""><img src="images/arrow2.gif" alt="" class="v-middle"></a>
					</div>
				</div>
				<ul class="women_pagenation">
					<li>Page:</li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
				<div class="pages">
					<div class="limiter visible-desktop">
						<label>Show</label>
						<select>
							<option value="" selected="selected">
								9
							</option>
							<option value="">
								15
							</option>
							<option value="">
								30
							</option>
						</select> per page
					</div>
				</div>
				<div class="clearfix"></div>
				<div class="container">
					<div class="main-content">
						<div class="products-grid">
							@foreach (var product in Model)
							{
								<div class="col-md-4 product simpleCart_shelfItem text-center">
									<a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id"><img src="@product.ImageSrc" alt="" /></a>
									<div class="mask">
										<a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id">Quick View</a>
									</div>
									<a class="product_name" asp-controller="Product" asp-action="GetProduct" asp-route-Id="@product.Id" style="font-size:12px;">@product.Name</a>
									<p><a asp-controller="Product" asp-action="GetProduct" asp-route-Id="@product.Id"><i></i> <span class="item_price">@product.Price$</span></a></p>
								</div>
							}
							<div class="clearfix"></div>
						</div>
					</div>
				</div>
			</div>
			<script type="text/javascript" src="~/js/jquery.flexisel.js"></script>
			<script src="~/js/cbpViewModeSwitch.js" type="text/javascript"></script>
			<script src="~/js/classie.js" type="text/javascript"></script>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"></div>
</div>



